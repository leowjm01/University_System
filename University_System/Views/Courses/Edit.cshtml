@model UniSystemTest.Models.Courses

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Courses Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="courseId" />
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Course Name</strong></label>
                <input asp-for="courseName" class="form-control" />
                <span asp-validation-for="courseName" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Teacher Name</strong></label>
                <select asp-for="teacherId" class="form-control form-select-sm form-select" style="height:40px" asp-items="ViewBag.teacherId"></select>
                <span asp-validation-for="teacherId" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-bottom: 20px">
                <input type="submit" value="Update" class="btn btn-primary" style="margin-right:3px;" />
                <a asp-action="Index" class="btn btn-secondary" style="margin-right:3px;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
