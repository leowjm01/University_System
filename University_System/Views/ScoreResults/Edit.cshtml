@model UniSystemTest.Models.ScoreResults

@{
    ViewData["Title"] = "Edit";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-info" role="alert" style="color: red">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Edit Score Result Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="scoreResultId" />
            <input type="hidden" asp-for="courseId" />
            <input type="hidden" asp-for="studentId" />
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Student Name</strong></label>
                <select asp-for="studentId" class="form-control" asp-items="ViewBag.studentId" style="height:40px" disabled="disabled"></select>
                <span asp-validation-for="studentId" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Course Name</strong></label>
                <select asp-for="courseId" class="form-control" asp-items="ViewBag.courseId" style="height:40px" disabled="disabled"></select>
                <span asp-validation-for="courseId" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 40px">
                <label class="control-label"><strong>Mark</strong></label>
                <input asp-for="mark" class="form-control" type="text" pattern="[0-9]+(\.[0-9]+)?" />
                <span asp-validation-for="mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" style="margin-right:3px;" />
                <a asp-action="Index" class="btn btn-secondary" style="margin-right:3px;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
