@model UniSystemTest.Models.Students

@{
    ViewData["Title"] = "Delete";
}

@functions {
    public string GetGender(bool isMale)
    {
        return isMale ? "Male" : "Female";
    }
}
<h1>Delete Student</h1>

<h3 style="color: red">Are you sure you want to delete this?</h3>
<hr />
<div>
    <dl class="row" style="font-size: 18px">
        <dt class="col-sm-2">
            <strong>Student Name </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@Html.DisplayFor(model => model.studentName) </strong>
        </dd>

        <dt class="col-sm-2">
            <strong>Student Email </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@Html.DisplayFor(model => model.email) </strong>
        </dd>

        <dt class="col-sm-2">
            <strong>Gender </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@GetGender(Model.gender) </strong>
        </dd>
    </dl>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="studentId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:3px;"/> 
        <a asp-action="Index" class="btn btn-secondary" style="margin-left:3px;">Cancel</a>
    </form>
</div>
