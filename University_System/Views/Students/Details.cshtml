@model UniSystemTest.Models.Students

@{
    ViewData["Title"] = "Details";
}

@functions {
    public string GetGender(bool isMale)
    {
        return isMale ? "Male" : "Female";
    }
}

<h1>Student Details</h1>
<hr />
<br />
<div>
    <dl class="row" style="font-size: 20px">
        <dt class = "col-sm-2">
            <strong>Student Name </strong>
        </dt>
        <dd class = "col-sm-10">
            :  <strong>@Html.DisplayFor(model => model.studentName) </strong>
        </dd>

        <dt class = "col-sm-2">
           <strong>Student Email </strong>
        </dt>
        <dd class = "col-sm-10">
            :  <strong>@Html.DisplayFor(model => model.email) </strong>
        </dd>

        <dt class="col-sm-2">
            <strong>Gender </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@GetGender(Model.gender) </strong>
        </dd>
    </dl>

    <h1 style="padding-top:20px">Exam Result</h1>
    <hr />

</div>

<div style="padding-top: 20px">
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>