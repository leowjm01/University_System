@model UniSystemTest.Models.Students

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="studentId" />

            @* Student Name *@
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Student Name</strong></label>
                <input asp-for="studentName" class="form-control" />
                <span asp-validation-for="studentName" class="text-danger"></span>
            </div>

            @* Student Email *@
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Student Email</strong></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            @* Gender *@
            <div class="form-group form-check" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Gender</strong></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="gender" value="true" style="padding-bottom: 8px">
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="gender" value="false">
                    <label class="form-check-label">Female</label>
                </div>
            </div>

            <div class="form-group" style="padding-bottom: 20px">
                <input type="submit" value="Update" class="btn btn-primary" style="margin-right:3px;"  />
                <a asp-action="Index" class="btn btn-secondary" style="margin-right:3px;" >Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
