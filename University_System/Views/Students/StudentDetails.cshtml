@model UniSystemTest.Models.StudentScoreResultViewModel

@{
    ViewData["Title"] = "StudentDetails";
}

@functions {
    public string GetGender(bool isMale)
    {
        return isMale ? "Male" : "Female";
    }
}

<h1>Student Details</h1>
<hr />
<br />
<div>
    <dl class="row" style="font-size: 20px">
        <dt class="col-sm-2">
            <strong>Student Name </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@Html.DisplayFor(model => model.Students.studentName) </strong>
        </dd>

        <dt class="col-sm-2">
            <strong>Student Email </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@Html.DisplayFor(model => model.Students.email) </strong>
        </dd>

        <dt class="col-sm-2">
            <strong>Gender </strong>
        </dt>
        <dd class="col-sm-10">
            :  <strong>@GetGender(Model.Students.gender) </strong>
        </dd>
    </dl>

    <h1 style="padding-top:20px">Exam Result</h1>
    <hr />
    @if (!Model.ScoreResults.Any())
    {
        <div class="text-center mt-5">
            <p style="font-size: 35px; color: red; margin-top: 30px">No data available</p>
        </div>
    }
    else
    {
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>
                        Student Name
                    </th>
                    <th>
                        Course
                    </th>
                    <th>
                        Mark
                    </th>
                    <th>
                        Grade
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.ScoreResults)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => result.Students.studentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => result.Courses.courseName)
                        </td>
                        <td>
                            @(result.mark == null ? " NIL " : @Html.DisplayFor(modelItem => result.mark))
                        </td>
                        <td>
                            @(result.grade == null ? " NIL " : @Html.DisplayFor(modelItem => result.grade))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

<div class="d-flex justify-content-center">
    @if (ViewBag.TotalPages > 1)
    {
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Students" asp-action="Details" asp-route-pageNum="1" asp-route-pageSize="@ViewBag.PageSize">Previous</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Students" asp-action="Details" asp-route-pageNum="@i" asp-route-pageSize="@ViewBag.PageSize">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Students" asp-action="Details" asp-route-pageNum="@(ViewBag.CurrentPage + 1)" asp-route-pageSize="@ViewBag.PageSize">Next</a>
                </li>
            }
        </ul>
    }
</div>

<div style="padding-top: 20px">
    <a asp-controller="ScoreResults" asp-action="Details" asp-route-id="@Model.Students.studentId" class="btn btn-primary">Back</a>
</div>