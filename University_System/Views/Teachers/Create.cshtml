@model UniSystemTest.Models.Teachers

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Teacher</h1>

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Teacher Name</strong></label>
                <input asp-for="teacherName" class="form-control" />
                <span asp-validation-for="teacherName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 20px">
                <label class="control-label" style="padding-bottom: 3px"><strong>Teacher Email</strong></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 10px">
                <label asp-for="gender" class="control-label" style="padding-bottom: 3px"><strong>Gender</strong></label>
                <div class="form-check" style="padding-bottom: 8px">
                    <input class="form-check-input" type="radio" asp-for="gender" value="true">
                    <label class="form-check-label"><strong>Male</strong></label>
                </div>
                <div class="form-check" style="padding-bottom: 20px">
                    <input class="form-check-input" type="radio" asp-for="gender" value="false">
                    <label class="form-check-label"><strong>Female</strong></label>
                </div>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 20px">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-right:3px;" />
                <a asp-action="Index" class="btn btn-secondary" style="margin-right:3px;">Cancel</a>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
